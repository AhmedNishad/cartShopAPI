@model Shopping.ViewModels.ProductsViewModel
@{
    ViewData["Title"] = "ViewProducts";
}

<a class="btn btn-link" asp-controller="Order" asp-action="Index"><i class="material-icons">arrow_back</i></a>

<h1>All Products</h1>
<a class="btn btn-secondary" asp-action="AddProduct">Add New</a>

<div class="row">
    @foreach (var product in Model.Products)
    {
    <div class="col-md-4">
        <div class="card">
            <div class="card-title bg-dark">
                <h4 class="text-center text-light">@product.ProductName</h4>
            </div>
            <div class="card-body text-secondary">
                @if (product.QuantityAtHand < 10)
                {
                    <h3 class="text-danger">@product.QuantityAtHand Remaining</h3>

                }
                else
                {
                    <h3>@product.QuantityAtHand Remaining</h3>
                }
                <a asp-action="ViewProduct" class="btn btn-light" asp-route-productId="@product.Id">View Product</a>
            </div>
        </div>
    </div>
    }
</div>
