@model Shopping.ViewModels.CustomerVM
@{
    ViewData["Title"] = "Add Customer";
}

    <div class="row">
        <div class="col-5 offset-3">
            <a asp-controller="Order" asp-action="Index"><i class="material-icons">arrow_back</i></a>

            <h1>Add Customer</h1>

            <form asp-controller="Customer" asp-action="AddCustomer" method="post">
                <div class="form-group">
                    <lable class="form-control" asp-for="@Model.Name">Customer Name</lable>
                    <input class="form-control" type="text" asp-for="@Model.Name" />
                    <span class="text-danger form-check" asp-validation-for="@Model.Name"></span>
                </div>

                <div class="form-group">
                    <input class="btn btn-primary" value="Add" type="submit" />
                </div>
            </form>
        </div>
    </div>